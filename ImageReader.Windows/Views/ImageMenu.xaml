<UserControl x:Class="ImageReader.Windows.Views.ImageMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageReader.Windows.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <RichTextBox x:Name="rtbTexto"
                     HorizontalAlignment="Left"
                     Height="314"
                     Margin="28,114,0,0"
                     VerticalAlignment="Top"
                     Width="541"
                     RenderTransformOrigin="0.636,0.654">
            <FlowDocument>
                <Paragraph>
                    <Run Text="" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="button"
                Content="Imagem"
                HorizontalAlignment="Left"
                Margin="28,23,0,0"
                VerticalAlignment="Top"
                Width="75"
                RenderTransformOrigin="0.627,-1.447"
                Click="button_Click" />
        <Label x:Name="label"
               Content="Idioma&#xD;&#xA;&#xD;&#xA;"
               Margin="337,23,374,0"
               VerticalAlignment="Top"
               Height="27" />
        <ComboBox x:Name="cmbIdioma"
                  HorizontalAlignment="Right"
                  Margin="0,24,216,0"
                  VerticalAlignment="Top"
                  Width="179"
                  RenderTransformOrigin="1.15,0.335"
                  SelectionChanged="cmbIdioma_SelectionChanged" />
        <Button x:Name="btnExportToDocx"
                Content="Exportar para Docx"
                Height="32"
                Margin="276,0,374,11"
                VerticalAlignment="Bottom"
                Click="btnExportToDocx_Click" />
        <Button x:Name="btnExportToPdf"
                Content="Exportar para Pdf"
                Height="32"
                Margin="0,0,216,11"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Width="135"
                Click="btnExportToPdf_Click" />
        <Button x:Name="button1"
                Content="PDF"
                HorizontalAlignment="Left"
                Margin="146,24,0,0"
                VerticalAlignment="Top"
                Width="75"
                Click="button1_Click" />
        <CheckBox x:Name="chkOuvirTexto"
                  Content="Ouvir texto"
                  HorizontalAlignment="Left"
                  Margin="28,71,0,0"
                  VerticalAlignment="Top"
                  Checked="checkBox_Checked" />
    </Grid>
</UserControl>
